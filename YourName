package helloWorldFiles;

import java.util.Scanner;

// Written by Dave Ghidiu

// This program will ask a user for their name, and then
// output their name with a salutation!


public class YourName {

	public static void main(String[] args) {
		
		// Declare the variables that will ultimately store the AGE and NAME
		int age;
		String name; 

		// Create a Scanner to read input
		Scanner scanner = new Scanner(System.in);

		// Ask the user for their name and assign their input to the variable 'name'
		System.out.print("Enter your name: ");
		name = scanner.nextLine();
		
		// Ask the user for their age and assign their input to the variable 'age'
		System.out.print("Enter your age: ");
		age = scanner.nextInt();

		System.out.println("Hello, " + name + "! You are " + age + " years old.");

	}

}













