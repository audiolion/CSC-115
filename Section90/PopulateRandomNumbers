package arrayDemo;

import java.util.*;

public class PopulateRandomNumbers {

	public static void main(String[] args) {
		
		Scanner scanner = new Scanner(System.in);

		System.out.print("How many numbers do you want in the array? ");
		int[] array = new int[scanner.nextInt()];

		System.out.println("Here is the array:");
		output(array);

		loadArrayWithRandomNumbers(array);
		
		System.out.println("\n\nHere is the randomized array:");
		output(array);		

	}

	static void loadArrayWithRandomNumbers(int[] arr) {
		
		Random random = new Random();
		
		for (int i = 0; i < arr.length; i++) {
			
			arr[i] = random.nextInt(201);
					
		}
		
		
		
	}
	
	static void output(int[] arr) {

		for (int i = 0; i < arr.length; i++) {
			System.out.print(arr[i] + " ");
		}

	}



}
